
<!-- NAVIGATION -->
<ul class="navigation__menu">
    <li><a href="index.html"><h1>NOMBREEEE</h1></a></li>
    <li><a href="contact.html"><h1>SOBRE MÍ &amp; CONTACTO</h1></a></li>
</ul>



//------------------------------- a partir de aquí es javascript RESALTAR SECCIÓN DEL MENÚ ACTIVA ------------------------------
function navbar_activa() {
    //Variables
    //Conseguir la url en la que me encuentro
    var url_actual = window.location.href;
    //Seleccionar los elementos de la lista del navbar
    var menu_secciones = document.querySelectorAll(".navigation__menu li");

    // Itera sobre los elementos de enlace
    menu_secciones.forEach(function (item) {
        var enlace = item.querySelector("a");
        //Compara el href de cada apartado del navbar con la url actual
        if (enlace.href === url_actual) {
            //Añade la clase del css de estilos que pone una sombra si la url actual se corresponde con la del enlace
            item.classList.add("navigation__menu__activo");
        }
    });
}


//------------------------------------------TEMPLATING------------------------------------------------
//Variables
var num_templates = 0;
//html de carga
const template_href = "data-templating-href";

//Verificar que se han cargado los templates
function template_final() {
    return num_templates <= 0;
}

//Iniciar templates
function template_setup() {
    const elementos = document.querySelectorAll(`[${template_href}]`);
    num_templates = 0;
    elementos.forEach(
        (elemento) => {
            if (elemento.dataset.templatingHref)
                num_templates++;
        }
    );
    //obtener templates
    elementos.forEach(
        (elemento) => {
            const href = elemento.dataset.templatingHref;
            //Volver si no hay template
            if (!href) return;
            //Conseguir el contenido a través de fetch, asíncrono
            fetch(href)
                .then(
                    //Pasar a texto
                    (response) => response.text()
                )
                .then(
                    (html) => {
                        //Reemplazar contenido de la plantilla
                        elemento.innerHTML = html;
                        num_templates--;
                        //Si al verificar los templates están cargados, ejecutar el reloj
                        if (template_final()) {
                            setup_reloj();
                            navbar_activa();
                        }
                    })
        });
}


//Cargar templates cuando se cargue la página e iniciar reloj cuando hayan cargado los templates
window.addEventListener("load", template_setup);
